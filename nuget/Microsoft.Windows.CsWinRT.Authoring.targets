<Project ToolsVersion="15.0" xmln="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="CsWinRTCopyAuthoringDlls" AfterTargets="ResolveAssemblyReference" Outputs="@(Reference)">
    <ItemGroup>
    <!-- WinRT.Runtime.dll -->
    <Reference Include="$(MSBuildThisFileDirectory)..\lib\WinRT.Runtime.dll" />
    <ReferenceCopyLocalPaths Include="$(MSBuildThisFileDirectory)..\lib\WinRT.Runtime.dll" />
    
    <!-- WinRT.Host.Shim.dll -->
    <Reference Include="$(MSBuildThisFileDirectory)..\lib\WinRT.Host.Shim.dll" />
    <ReferenceCopyLocalPaths Include="$(MSBuildThisFileDirectory)..\lib\WinRT.Host.Shim.dll" />
    
    <!-- Microsoft.Windows.SDK.NET.dll -->
    <Reference Include="$(MSBuildThisFileDirectory)..\lib\Microsoft.Windows.SDK.NET.dll" />
    <ReferenceCopyLocalPaths Include="$(MSBuildThisFileDirectory)..\lib\Microsoft.Windows.SDK.NET.dll" />
    
    <!-- WinRT.Host.dll - arch specific! -->
    <Reference Include="$(MSBuildThisFileDirectory)..\runtimes\win-$(Platform)\native\WinRT.Host.dll" />
    <ReferenceCopyLocalPaths Include="$(MSBuildThisFileDirectory)..\runtimes\win-$(Platform)\native\WinRT.Host.dll" />
    </ItemGroup>
  </Target>
</Project>